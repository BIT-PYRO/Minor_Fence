<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".ViewAttendanceActivity">

    <!-- Title for the Attendance Screen -->
    <TextView
        android:id="@+id/view_attendance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Attendance Records"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" /> <!-- Increased padding for more spacing -->

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" /> <!-- Increased bottom margin -->

    <!-- RecyclerView for Attendance Records -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendance_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:contentDescription="List of attendance records"
        android:layout_marginTop="16dp"
    android:padding="8dp" /> <!-- Padding added for better content display inside RecyclerView -->

</LinearLayout>
